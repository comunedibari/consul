<header>
  
  <div class="top-links">
    <div class="row">
    <% if Rails.application.config.language_switch == true %>
      <%= render "shared/locale_switcher" %>
    <% end %>
      <div class="hide-for-small-only">
        <%= render "shared/top_links" %>
      </div>
    
    </div>
  </div>

  <div class="row">
    <div class="top-bar">

      <%= link_to Setting['org_name', User.pon_id], root_path, class: "logo show-for-small-only" %>

      <span data-responsive-toggle="responsive_menu" data-hide-for="medium" class="float-right">
        <span class="menu-icon" data-toggle></span>
        <%= t("application.menu")%>
      </span>

      <div id="responsive_menu">        
        <div class="top-bar-title">
          <%= link_to root_path, class: "hide-for-small-only", accesskey: "0" do %>
            <% if Rails.application.config.cm == 'cm1'%>
            <%= image_tag(image_path_for("#{Rails.application.config.cm}/logo_header_home.png"), class: 'hide-for-small-only float-left', size: '80x80', alt: t("layouts.header.logo")) %>
            <% end %>
            <%= Setting['org_name',User.pon_id].to_s %>
          <% end %>
        </div>
        
        <div class="top-bar-right">
          <ul class="menu" data-responsive-menu="medium-dropdown">
            <% if pon_count > 1%>
              <li><%= link_to t("layouts.header.pon_list"),pons_path %></li>
            <% end %>
            <%= render "shared/admin_login_items" %>
            <%= render "layouts/notification_item" %>
            <%= render "devise/menu/login_items" %>
          </ul>

          <div class="show-for-small-only">
            <div class="subnavigation row">
              <% if Rails.application.config.enable_subnavigation_menu %>
                <%= render "shared/subnavigation" %>
              <% end %>  
              <div class="small-12 column">
                <%= render "shared/top_links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="subnavigation expanded">
    <div class="row">
      <div class="hide-for-small-only">      
        <% if Rails.application.config.enable_subnavigation_menu %>
          <%= render "shared/subnavigation" %>
        <% end %>
      </div>
      <div class="small-12 medium-3 column">
        <%= yield :header_addon %>
      </div>
    </div>
  </div>

</header>

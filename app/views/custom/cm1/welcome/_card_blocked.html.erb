<div class="col col-lg-3 col-md-6 col-sm-12 mb-3">
  <div class="card-wrapper">
    <div class="card card-mod mx-3" style="width: 100%; height: 92%; background: #e5e5e5 ;filter: grayscale(100%);">
      <div class="card-body p-1" style="text-align: center;">
        <%= image_tag(image, class: "card-img customnew-my-2",style: "width: 15%;") %>
        <%=  link_to href do %>      
          <h4 class="card-title" style="text-align: center; font-size: 1.1rem;"><%= title %></h4>
          <p class="card-text mx-2" style="font-size: 0.9rem;line-height: 1.1rem;"><%=description %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
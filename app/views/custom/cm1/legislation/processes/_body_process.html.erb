<div class="proposal-info">

  <p>
    Categoria: <%= get_typology_name_by_id @process.legislation_process_typologies_id %>
  </p>

  <%= render '/shared/author_info', resource: @process %>
  <span class="bullet">&nbsp;&bull;&nbsp;</span>
  <%= l @process.created_at.to_date %>
</div>

<br>

<hr>
<div>
  <%= t("legislation.processes.header.date",
        start: format_date(@process.start_date), end: format_date(@process.end_date)).html_safe %>

</div>

<% if @process.description.present? %>
  <hr>
  <p class="title"><%= t("legislation.processes.header.description") %></p>
  <div style=" word-wrap: break-word;"><%= markdown @process.description %></div>
<% end %>

<% if @process.additional_info.present? %>
  <div id="collapseDiv1" class="collapse-div" role="tablist">
    <div class="collapse-header" id="heading3">
      <button data-toggle="collapse" data-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
        <%= t("legislation.processes.header.additional_info") %>
      </button>
    </div>
    <div id="collapse3" class="collapse" role="tabpanel" aria-labelledby="heading3">
      <div class="collapse-body">
        <%= markdown @process.additional_info if @process.additional_info %>
      </div>
    </div>
  </div>
<% end %>

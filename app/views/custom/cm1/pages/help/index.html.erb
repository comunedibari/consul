<% provide :title do %><%= t("pages.titles.help", org: Setting['org_name',User.pon_id].to_s) %><% end %>
<% content_for :canonical do %>
  <%= render "shared/canonical", href: help_url %>
<% end %>

<div class="jumbo light">
  <div class="row">
    <div class="small-12 medium-9 column">
      <h2><%= t("pages.help.title", org: Setting['org_name',User.pon_id].to_s) %></h2>
      <p><%= t("pages.help.subtitle", org: Setting['org_name',User.pon_id].to_s) %></p>
      <p><%= t("pages.help.guide", org: Setting['org_name',User.pon_id].to_s) %></p>
    </div>
  </div>

  <%= render "pages/help/menu" %>
</div>

<div id="more-info" class="more-info-content">
  <div class="row">
    <div class="small-12 medium-7 large-8 column">
      <% if service?(:debates) %>
        <%= render "pages/help/debates" %>
      <% end %>

      <% if service?(:proposals) %>
        <%= render "pages/help/proposals" %>
      <% end %>

      <% if service?(:crowdfundings) %>
        <%= render "pages/help/crowdfundings" %>
      <% end %>

      <% if service?(:events) %>
        <%= render "pages/help/events" %>
      <% end %>

      <% if feature?(:polls) %>
        <%= render "pages/help/polls" %>
      <% end %>

      <% if service?(:processes) %>
        <%= render "pages/help/processes" %>
      <% end %>

      <% if service?(:assets) %>
        <%= render "pages/help/moderable_bookings" %>
      <% end %>

      <% if service?(:reportings) %>
        <%= render "pages/help/reportings" %>
      <% end %>       
    </div>
    <div class="small-12 medium-4 large-3 column more-info-sidebar">
      <%= render "pages/help/sidebar" %>
    </div>
  </div>

  <div class="row">
    <hr>
    <div class="small-12 column">
      <%= render "pages/help/other" %>
    </div>
  </div>
</div>

<span class="flag-content">
  <% if !isBlockedPrivacy && (show_flag_action? event) %>
    <a id="flag-expand-event-<%= event.id %>" data-toggle="flag-drop-event-<%= event.id %>" title="<%= t('shared.flag') %>">
      <span class="icon-flag flag-disable"></span>
    </a>
    <span class="dropdown-pane" id="flag-drop-event-<%= event.id %>" data-dropdown data-auto-focus="true">
      <%= link_to t('shared.flag'), flag_event_path(event), method: :put, remote: true, id: "flag-event-#{ event.id }" %>
    </span>
  <% end %>

  <% if !isBlockedPrivacy && (show_unflag_action? event) %>
    <a id="unflag-expand-event-<%= event.id %>" data-toggle="unflag-drop-event-<%= event.id %>" title="<%= t('shared.unflag') %>">
      <span class="icon-flag flag-active"></span>
    </a>
    <span class="dropdown-pane" id="unflag-drop-event-<%= event.id %>" data-dropdown data-auto-focus="true">
      <%= link_to t('shared.unflag'), unflag_event_path(event), method: :put, remote: true, id: "unflag-event-#{ event.id }" %>
    </span>
  <% end %>
  <% if isBlockedPrivacy %>
    <div class="label round">
      <%= "Segnalazione non consentita. Non hai dato il tuo pieno consenso alla privacy" %>
    </div>
  <% end %>  
</span>

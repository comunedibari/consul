<%= form_for [:admin, @agreement, @agreement_requirement], url: url, html: {data: {watch_changes: true}} do |f| %>


  <% if @agreement_requirement.errors.any? %>
    <div id="error_explanation" data-alert class="callout alert" data-closable>
      <button class="close-button" aria-label="<%= t("application.close") %>" type="button" data-close>
        <span aria-hidden="true">&times;</span>
      </button>

      <strong>
        <%= @agreement_requirement.errors.count %>
        <%= t("admin.collaboration.agreement_requirements.errors.form.error", count: @agreement_requirement.errors.count) %>
      </strong>
    </div>
  <% end %>
  <br>
  <div class="small-12 medium-4 column">
    <%= f.label :title, t("admin.collaboration.agreement_requirements.form.title") %>
  </div>
  <div class="small-12 medium-8 column">
    <%= f.text_area :title, rows: 5, label: false, placeholder: t('admin.collaboration.agreement_requirements.form.title_placeholder') %>
  </div>


  

  <div class="row">
    <div class="actions small-12 medium-3 column legislation-process-save">
      <%= f.submit(class: "button",style: "width: auto;", value: t("admin.collaboration.agreement_requirements.#{admin_submit_action(@agreement_requirement)}.submit_button")) %>
    </div>
  </div>
<% end %>


<% provide :title do %>
  Admin - <%= t("admin.menu.legislation") %> - <%= @agreement.title %> - <%= t("admin.collaboration.agreement_requirements.index.title") %> - <%= @agreement_requirement.title %>
<% end %>

<div class="legislation-admin legislation-questions-edit legislation-questions-form row">
  <div class="small-12 column">
    <%= back_link_to admin_collaboration_agreement_agreement_requirements_path(@agreement), t("admin.collaboration.agreement_requirements.edit.back") %>

    <h2><%= @agreement.title %></h2>

    <%= render 'admin/collaboration/agreements/subnav', process: @agreement, active: 'agreement_requirements' %>

    <div class="row">
      <div class="small-12 medium-9 column">
        <h3><%= t("admin.collaboration.agreement_requirements.edit.title", question_title: @agreement_requirement.title) %></h3>
      </div>
      <div class="small-12 medium-3 column legislation-question-delete">
        <%= link_to t("admin.collaboration.agreement_requirements.index.delete"), admin_collaboration_agreement_agreement_requirement_path(@agreement, @agreement_requirement),
                    method: :delete,
                    class: 'button hollow alert' %>
      </div>
    </div>

    <%= render 'form', url: admin_collaboration_agreement_agreement_requirement_path( @agreement, @agreement_requirement) %>
  </div>
</div>

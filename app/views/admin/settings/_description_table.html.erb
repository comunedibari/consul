<h2><b> <%= t("admin.settings.index.service.description")%> </b></h2>
<p class="help-text"> <%= t("admin.settings.index.service.description_length")%></p>
<table>
  <tbody>
  <% @description.each  do |description| %>
    <% if description.editable %>
      <tr>
        <td>
          <strong><%= t("settings.#{description.key.to_s.sub("_description","")}") %></strong>
        </td>
        <td class="small-12 medium-8">
          <%= form_for(description, url: admin_setting_path(description), html: { id: "edit_#{dom_id(description)}"}) do |f| %>
            <div class="small-12 medium-6 large-9 column">
              <%= f.text_area :value, maxlength: 180, label: false, id: dom_id(description), lines: 3%>
            </div>
            <div class="small-12 medium-6 large-3 column">
              <%= f.submit(t('admin.settings.index.update_setting'), class: "btn btn-outline-primary btn-block") %>
            </div>
          <% end %>
        </td>

      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

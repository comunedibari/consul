<div class="row">
  <div class="small-12 column">
    <div id="admin-map" class="map"
                        data-map
                        data-map-center-latitude="<%= Setting["map_latitude",User.pon_id] %>"
                        data-map-center-longitude="<%= Setting["map_longitude",User.pon_id] %>"
                        data-map-zoom="<%= Setting["map_zoom",User.pon_id] %>"
                        data-map-tiles-provider="<%= Rails.application.secrets.map_tiles_provider %>"
                        data-map-tiles-provider-attribution="<%= Rails.application.secrets.map_tiles_provider_attribution %>"
                        data-marker-editable="true"
                        data-marker-latitude="<%= Setting["map_latitude",User.pon_id] %>"
                        data-marker-longitude="<%= Setting["map_longitude",User.pon_id] %>"
                        data-latitude-input-selector="#latitude"
                        data-longitude-input-selector="#longitude"
                        data-zoom-input-selector="#zoom">
    </div>
    <script>
      $('#tab-map-label').on('click', function (e) {
        var el = document; // This can be your element on which to trigger the event
        var event = document.createEvent('HTMLEvents');
        event.initEvent('resize', true, false);
        el.dispatchEvent(event);
      });
    </script>
    <%= form_tag admin_update_map_path, method: :put, id: 'map-form' do |f| %>

      <%= hidden_field_tag :latitude,   Setting["map_latitude",User.pon_id] %>
      <%= hidden_field_tag :longitude,  Setting["map_longitude",User.pon_id] %>
      <%= hidden_field_tag :zoom,       Setting["map_zoom",User.pon_id] %>

      <div class="small-12 medium-6 large-4 margin-top">
        <%= submit_tag t("admin.settings.index.map.form.submit"),
                     class: "button hollow expanded" %>
      </div>

    <% end %>
  </div>
</div>

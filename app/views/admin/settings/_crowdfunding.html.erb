
  <div class="row">
    <div class="small-12 column">
    
      <ul class="tabs" data-tabs="c0u7cr-tabs" id="settings-tabs">

        <li class="tabs-title is-active" role="presentation">
            <h3>
              <%= t("admin.settings.index.services.home_pages.crowdfunding.title") %>
              <span class="js-comments-count"></span>
            </h3>
        </li>

      </ul>
    </div>
  </div>

  <div class="row">
    <div class="small-12 column">
      <div class="tabs-panel is-active" id="tab-videos" role="tabpanel" aria-hidden="true" aria-labelledby="tab-videos-label">
      
        <table>
          <tbody>

          <% @crowdfundings.each  do |crowdfunding| %>
          <tr>
              <td class="small-12 medium-4">
                <strong><%= t("settings.#{crowdfunding.key}") %></strong>
              </td>
              <td class="small-12 medium-8">
                <%= form_for(crowdfunding, url: admin_setting_path(crowdfunding), html: {id: "edit_#{dom_id(crowdfunding)}"}) do |f| %>                   
                    <div class="small-12 medium-6 large-9 column">
                      <%= f.text_area :value, label: false, id: dom_id(crowdfunding), lines: 1 %>
                    </div>
                  <div class="small-12 medium-6 large-3 column">
                    <%= f.submit(t('admin.settings.index.update_setting'), class: "button hollow expanded") %>
                  </div>
                <% end %>
              </td>


          </tr>
          <% end %>
          </tbody>
        </table>

      </div>
    </div>

  </div>

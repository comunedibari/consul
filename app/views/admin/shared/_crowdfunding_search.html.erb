<%= form_for(Crowdfunding.new, url: url, as: :crowdfunding, method: :get) do |f| %>
  <div class="row">
    <div class="small-12 medium-6 column">
      <%= text_field_tag :search, "", placeholder: t("admin.shared.crowdfunding_search.placeholder") %>
    </div>
    <div class="form-inline small-12 medium-6 column">
      <%= f.submit t("admin.shared.crowdfunding_search.button"), class: "button" %>
    </div>
  </div>
<% end %>
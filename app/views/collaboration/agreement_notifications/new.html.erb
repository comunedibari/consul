<div class="row">
  <div class="small-12 column">
    <%= back_link_to %>

    <h1><%= t("agreement_notifications.new.title") %></h1>

    <div class="callout primary">
      <p>
        <%= t("agreement_notifications.new.info_about_receivers_html",
              count: @collaboration_agreement.users_to_notify.count,
              collaboration_agreement_page: link_to(t("agreement_notifications.new.collaboration_agreement_page"),
                                     collaboration_agreement_path(@collaboration_agreement, anchor: "comments"))).html_safe %>
      </p>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-9 column">
    <%= form_for @notification do |f| %>
      <%= render "shared/errors", resource: @notification %>

      <%= f.label :title, t("agreement_notifications.new.title_label") %>
      <%= f.text_field :title, label: false %>

      <%= f.label :body, t("agreement_notifications.new.body_label") %>
      <%= f.text_area :body, label: false, rows: "3" %>

      <%= f.hidden_field :collaboration_agreement_id, value: @collaboration_agreement.id %>

      <div class="small-12 medium-4">
        <%= f.submit t("agreement_notifications.new.submit_button"), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>

<div class="proposal-form row">

  <div class="small-12 medium-9 column">
    <%= back_link_to %>

    <h1><%= t("legislation_proposals.new.start_new") %></h1>

    <%= render "legislation/proposals/form", form_url: legislation_process_proposals_url, id: @proposal.id %>
  </div>

  <div class="small-12 medium-3 column">
    <span class="icon-proposals float-right"></span>
    <h2><%= t("legislation_proposals.new.recommendations_title") %></h2>
    <ul class="recommendations">
      <li><%= t("legislation_proposals.new.recommendation_one") %></li>
      <li><%= t("legislation_proposals.new.recommendation_two") %></li>
      <li><%= t("legislation_proposals.new.recommendation_three") %></li>
    </ul>
  </div>
</div>

<div class="sidebar-divider"></div>
<h2 class="sidebar-title"><%= t("proposals.index.retired_proposals") %></h2>

<% if params[:retired].blank? %>
  <p><%= link_to t("proposals.index.retired_proposals_link"), legislation_proposals_path(retired: 'all'), class: "small" %></p>
<% else %>
  <div class="sidebar-links">
    <%= link_to t("proposals.index.retired_links.all"), legislation_proposals_path(retired: 'all') %>
    <% Proposal::RETIRE_OPTIONS.each do |option| %>
      <%= link_to t("proposals.index.retired_links.#{option}"), legislation_proposals_path(retired: option) %>
    <% end %>
  </div>
<% end %>

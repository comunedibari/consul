<td style="padding-bottom: 20px; padding-left: 10px;">

  <table cellpadding="0" cellspacing="0" border="0" style="background: #fff; margin: 0 auto; max-width: 700px; width:100%;">
    <tr>
      <td>
        <table cellpadding="0" cellspacing="0" border="0" style="width: 100%;">
          <tr>
            <td style="border-bottom: 1px solid #dadfe1; padding: 20px 0;">
              <a href="#" target="_blank">
                <%= image_tag('bari-partecipa-logo.png', style: "border: 0; display: block; width: 100%;max-width: 370px", size: '100x100') %>
              </a>
              <p style="font-family: 'Open Sans','Helvetica Neue',arial,sans-serif;font-size: 14px;font-weight: normal;line-height: 24px;">
                <%= t("mailers.moderable_booking_deleted.image_html",
                      org_name:  @moderable_booking.user.pon.name).html_safe %>
              </p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <%= yield %>
    </tr>
  </table>

  <h1 style="font-family: 'Open Sans','Helvetica Neue',arial,sans-serif;">
    <%= t("mailers.moderable_booking_deleted.title_html",
          code: @moderable_booking.code).html_safe %>
  </h1>

  <p style="font-family: 'Open Sans','Helvetica Neue',arial,sans-serif;font-size: 14px;font-weight: normal;line-height: 24px;">
    <%= t("mailers.moderable_booking_deleted.intro_html",
          author: @moderable_booking.user.username).html_safe %>
  </p>

  <p style="font-family: 'Open Sans','Helvetica Neue',arial,sans-serif;font-size: 14px;font-weight: normal;line-height: 24px;">
    <%= t("mailers.moderable_booking_deleted.text_html",
          asset: @moderable_booking.asset.name,
          day: @moderable_booking.time_end.strftime("%d-%m-%Y"),
          time_start: @moderable_booking.time_start.to_s(:time),
          time_end: (@moderable_booking.time_end + 1.seconds).to_s(:time)).html_safe %>
  </p>

  <p style="font-family: 'Open Sans','Helvetica Neue',arial,sans-serif;font-size: 14px;font-weight: normal;line-height: 24px;">
    <%= t("mailers.budget_investment_created.sincerely") %>
    <br>
    <span style="color: #ccc; font-size: 12px;">
      <%= t("mailers.budget_investment_created.signatory") %>
    </span>
  </p>
</td>

<div id="image_temp" class="small-12 column">
  <div id="<%= dom_id(f.object) %>" class="image direct-upload nested-fields">
    <%= f.hidden_field :id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :cached_attachment %>

    <div class="small-12 margin-top title" style="display: none;">
      <%= f.text_field :title, placeholder: t("images.form.title_placeholder") %>
    </div>

    <%= render_image(f.object, :thumb, false) if f.object.attachment.exists? %>
    
    <%= render_image_cache(f.object, :thumb, false) if f.object.cached_attachment.present? %>
    
    <div class="small-12 column attachment-actions">
      <div class="small-8 column action-add attachment-errors image-attachment">
        <%= render_image_attachment(f, imageable, f.object) %>
      </div>
      <div class="small-4 column action-remove text-right">
        <%= render_destroy_image_link(f, f.object) %>
      </div>
    </div>

    <div class="small-12 column" style="display: none;">
      <p class="file-name" >
        <!-- Hidden file-name -->
        <%#=image_attachment_file_name(f.object) %>
      </p>
    </div>

    <div class="small-12 column">
      <div class="progress-bar-placeholder"><div class="loading-bar"></div></div>
    </div>

    <hr>
  </div>
</div>

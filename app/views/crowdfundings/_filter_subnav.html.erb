<div class="row">
  <div class="small-12 column">
    <ul class="tabs" data-tabs id="crowdfundings-tabs">
      <li class="tabs-title is-active">
        <%= link_to "#tab-comments" do %>
          <h3>
            <%= t("crowdfundings.show.comments_tab") %>
            <span class="js-comments-count">(<%= @crowdfunding.comments_count %>)</span>
          </h3>
        <% end %>
      </li>
      <li class="tabs-title">
      <%= link_to "#tab-notifications" do %>
        <h3>
          <%= t("crowdfundings.show.notifications_tab") %>
          (<%= @notifications.count %>)
        </h3>
      <% end %>
      </li>
    </ul>
  </div>
</div>

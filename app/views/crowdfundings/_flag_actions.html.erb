<span class="flag-content">
  <% if show_flag_action? crowdfunding %>
    <a id="flag-expand-crowdfunding-<%= crowdfunding.id %>" data-toggle="flag-drop-crowdfunding-<%= crowdfunding.id %>" title="<%= t('shared.flag') %>">
      <span class="icon-flag flag-disable"></span>
    </a>
    <span class="dropdown-pane" id="flag-drop-crowdfunding-<%= crowdfunding.id %>" data-dropdown data-auto-focus="true">
      <%= link_to t('shared.flag'), flag_crowdfunding_path(crowdfunding), method: :put, remote: true, id: "flag-crowdfunding-#{ crowdfunding.id }" %>
    </span>
  <% end %>

  <% if show_unflag_action? crowdfunding %>
    <a id="unflag-expand-crowdfunding-<%= crowdfunding.id %>" data-toggle="unflag-drop-crowdfunding-<%= crowdfunding.id %>" title="<%= t('shared.unflag') %>">
      <span class="icon-flag flag-active"></span>
    </a>
    <span class="dropdown-pane" id="unflag-drop-crowdfunding-<%= crowdfunding.id %>" data-dropdown data-auto-focus="true">
      <%= link_to t('shared.unflag'), unflag_crowdfunding_path(crowdfunding), method: :put, remote: true, id: "unflag-crowdfunding-#{ crowdfunding.id }" %>
    </span>
  <% end %>
</span>

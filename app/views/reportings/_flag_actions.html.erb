<span class="flag-content">
  <% if show_flag_action? reporting %>
    <a id="flag-expand-reporting-<%= reporting.id %>" data-toggle="flag-drop-reporting-<%= reporting.id %>" title="<%= t('shared.flag') %>">
      <span class="icon-flag flag-disable"></span>
    </a>
    <span class="dropdown-pane" id="flag-drop-reporting-<%= reporting.id %>" data-dropdown data-auto-focus="true">
      <%= link_to t('shared.flag'), flag_reporting_path(reporting), method: :put, remote: true, id: "flag-reporting-#{ reporting.id }" %>
    </span>
  <% end %>

  <% if show_unflag_action? reporting %>
    <a id="unflag-expand-reporting-<%= reporting.id %>" data-toggle="unflag-drop-reporting-<%= reporting.id %>" title="<%= t('shared.unflag') %>">
      <span class="icon-flag flag-active"></span>
    </a>
    <span class="dropdown-pane" id="unflag-drop-reporting-<%= reporting.id %>" data-dropdown data-auto-focus="true">
      <%= link_to t('shared.unflag'), unflag_reporting_path(reporting), method: :put, remote: true, id: "unflag-reporting-#{ reporting.id }" %>
    </span>
  <% end %>
</span>
